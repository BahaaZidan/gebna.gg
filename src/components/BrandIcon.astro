---
import type { SimpleIcon } from "simple-icons";

interface Props {
  icon: SimpleIcon;
  size?: number;
  color?: string;
  class?: string;
}
const { icon, size = 24, color = "currentColor", class: class_ } = Astro.props;
---

<svg
  role="img"
  fill={color ?? `#${icon.hex}`}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  class={class_}
>
  <title>{icon.title}</title>
  <path d={icon.path}></path>
</svg>
