---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Html from "./Html.astro";
import { ShareIcon, CoffeeIcon, LinkedinIcon } from "@lucide/astro";
import { siX, siReddit, siYcombinator } from "simple-icons";
import BrandIcon from "../components/BrandIcon.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"blog">["data"] & { id: string };

const {
  title,
  description,
  pubDate,
  heroImage,
  // id
} = Astro.props;

// const website_id = 1;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
---

<Html>
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
    <!-- <script is:inline>
      window.addEventListener("message", function (event) {
        if (event.data.type === "resize" && event.data.height) {
          const iframe = document.getElementById("comments");
          iframe.style.height = event.data.height + "px";
        }
      });
    </script> -->
  </head>

  <body>
    <Header />
    <main data-pagefind-body class="min-h-[calc(100vh-124px)]">
      <article class="prose prose-lg mx-auto p-4">
        <h1>
          {title}
        </h1>
        <FormattedDate date={pubDate} />
        <div class="divider"></div>
        <slot />
        <div class="not-prose flex w-full justify-between">
          <div class="dropdown dropdown-top">
            <div tabindex="0" role="button" class="btn btn-primary">
              <ShareIcon /> Share
            </div>
            <ul
              tabindex="0"
              class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm"
            >
              <li>
                <a
                  href={`https://www.reddit.com/submit?url=${canonicalURL}&type=LINK&title=${title}`}
                  target="_blank"
                  rel="noreferrer noopener"
                  data-umami-event="Share"
                  data-umami-event-target="Reddit"
                >
                  <BrandIcon icon={siReddit} />
                  Reddit
                </a>
              </li>
              <li>
                <a
                  href={`https://news.ycombinator.com/submitlink?u=${canonicalURL}&t=${title}`}
                  target="_blank"
                  rel="noreferrer noopener"
                  data-umami-event="Share"
                  data-umami-event-target="Hacker News"
                >
                  <BrandIcon icon={siYcombinator} />
                  Hacker News
                </a>
              </li>
              <li>
                <a
                  href={`https://twitter.com/intent/tweet?text=${title} by @GebnaTorky&url=${canonicalURL}`}
                  target="_blank"
                  rel="noreferrer noopener"
                  data-umami-event="Share"
                  data-umami-event-target="Twitter"
                >
                  <BrandIcon icon={siX} />
                  Twitter
                </a>
              </li>

              <li>
                <a
                  href={`https://www.linkedin.com/shareArticle?mini=true&url=${canonicalURL}`}
                  target="_blank"
                  rel="noreferrer noopener"
                  data-umami-event="Share"
                  data-umami-event-target="LinkedIn"
                >
                  <LinkedinIcon />
                  LinkedIn
                </a>
              </li>
            </ul>
          </div>
          <a
            class="btn btn-secondary"
            href="/support"
            target="_blank"
            data-umami-event="Coffee Link"
          >
            <CoffeeIcon /> Buy me a coffee
          </a>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</Html>

